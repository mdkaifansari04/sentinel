generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model GitHubEvent {
  id          String   @id
  org         String
  repo        String
  username    String
  avatar      String
  type        String
  createdAt   DateTime
  updatedAt   DateTime?
  data        Json
  isSensitive Boolean  @default(false)

  @@index([org])
  @@index([repo])
  @@index([type])
  @@index([createdAt])
}
