{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "outDir": "./dist",
    "paths": {
      "test/*": ["test/*"],
      "~/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src", "test"]
}
